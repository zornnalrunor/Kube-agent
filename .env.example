# Environment variables for Terraform K8s Agent

# LLM Configuration
LLM_PROVIDER=openai  # openai, anthropic, ollama
LLM_MODEL=gpt-4-turbo-preview
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096

# OpenAI (if using openai provider)
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic (if using anthropic provider)
# ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Ollama (if using ollama provider - for local/free usage)
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_MODEL=llama2

# State Management
STATE_BACKEND=sqlite  # sqlite, postgresql, file
STATE_DB_PATH=./data/state.db
# STATE_DB_URL=postgresql://user:password@localhost:5432/terraform_agent

# Application
DEBUG=false

# Terraform
TF_LOG=INFO
TF_PARALLELISM=10

# Kubernetes
# KUBECONFIG=/path/to/kubeconfig

# Monitoring
PROMETHEUS_RETENTION=15d
GRAFANA_ADMIN_PASSWORD=admin

# Alerting (optional)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
# ENABLE_ALERTS=false

# Agent Configuration
AGENT_MAX_ITERATIONS=10
AGENT_TIMEOUT=3600

# Cloud Providers (when using EKS/AKS)
# AWS
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_DEFAULT_REGION=us-east-1

# Azure
# ARM_CLIENT_ID=your-azure-client-id
# ARM_CLIENT_SECRET=your-azure-client-secret
# ARM_SUBSCRIPTION_ID=your-azure-subscription-id
# ARM_TENANT_ID=your-azure-tenant-id
